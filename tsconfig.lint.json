{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noEmit": true,
    "allowJs": true
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "*.ts"],
  "exclude": ["node_modules", "dist"]
}
